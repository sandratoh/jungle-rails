<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <main class="container">
    <% if active_sale? %>
      <p class="alert alert-info">
      <% @sale = Sale.find_by("starts_on <= ? AND ends_on >= ?", Date.current, Date.current) %>
        There's an active <%= @sale.name %> event going on!
        <strong>Everything is <%= @sale.percent_off %>% off!</strong>
      </p>
    <% end %>
    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
